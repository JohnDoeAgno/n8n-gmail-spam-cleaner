      "credentials": {
        "gmailOAuth2": {
          "id": "REPLACE_WITH_YOUR_CREDENTIAL_ID",
          "name": "Gmail OAuth2"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "// Garde uniquement les mails de plus de 7 jours\nconst sevenDays = 7 * 24 * 60 * 60 * 1000;\nconst now = new Date().getTime();\n\nreturn $input.all().filter(item => {\n  const ts = new Date(item.json.internalDate).getTime();\n  return (now - ts) > sevenDays;\n});"
      },
      "id": "3",
      "name": "Filtrer vieux spams",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [600, 200]
